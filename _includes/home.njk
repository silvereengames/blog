<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="./css/index.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link
        href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
        <style>
            * {
                font-family: "Fira Code", monospace;
                margin: 0;
                color: white;
                background-color: #1a1a1a;
                text-align: center;
            }

            .title {
                text-align: center;
            }

            .post {
                margin-top: 10px;
                margin-bottom: 10px;
                margin-left: auto;
                margin-right: auto;
                padding: 10px;
                border-radius: 5px;
                background-color: #101010;
                width: 50%;
                cursor: pointer;
                }

                .post-title {
                    font-family: "Poppins", sans-serif;
                    font-size: 20px;
                    font-weight: 600;
                    background-color: #101010;
                }

                .content {
                    margin-left: auto;
                    margin-right: auto;
                    width: 50%;
                }
        </style>
        <title>silvereen.md</title>
    </head>
    <body>
        <h1 id="title" class="title"></h1>

        <div style="width: 1px; height: 5vh"></div>

        <div class="content">
        {{ content | safe }}
        </div>

        <div style="width: 1px; height: 5vh"></div>
        <ul>
            {% for item in collections.all %}
                    <div class="post" onclick="window.open(`${location.pathname.replace('/index.html','')}{{ item.url }}index.html`, '_parent')">
                        <p class="post-title">{{ item.data.title }}</p>
                    </div>
            {% endfor %}
        </ul>

        <script src="https://unpkg.com/typewriter-effect@latest/dist/core.js"></script>
        <script>
            const title = document.getElementById('title')
            const typewriterTitle = new Typewriter(title, {delay: 100});

            typewriterTitle
                .typeString("<span style='color: lime;'>silvereen</span>.md")
                .start();
        </script>
    </body>
</html>